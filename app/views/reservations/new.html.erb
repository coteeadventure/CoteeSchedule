<h1>Reserve Your Cruise</h1>

<%= form_for :reservation, url: reservations_path do |f| %>

  <% if @reservation.errors.any? %>
    <div id="error_explanation">
      <h2>
        I found <%= pluralize(@reservation.errors.count, "error") %>:
      </h2>
      <ul>
        <% @reservation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :cruise %><br>
	<%= f.collection_select :scheduled_cruise_id, ScheduledCruise.all, :id, :description_pretty %>
  </p>

  <p>
    <%= f.label :your_name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address_line_1 %>
  </p>

  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </p>

  <p>
    <%= f.label :zip_code %><br>
    <%= f.text_field :zip %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :email_address %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :coupon_code %><br>
    <%= f.text_field :coupon_code %>
  </p>

  <p>
    <%= f.label :additional_information %><br>
    <%= f.text_area :additional_information %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  
<% end %>

<%= link_to 'Back', reservations_path %>
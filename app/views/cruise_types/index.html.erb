<h1>Listing Cruise Types</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Capacity</th>
	<th colspan="3"></th>
  </tr>
 
  <% @cruise_types.each do |cruise_type| %>
    <tr>
      <td><%= cruise_type.name %></td>
      <td><%= cruise_type.capacity %></td>
      <td><%= link_to 'Show Scheduled Cruises', cruise_type_path(cruise_type) %></td>
      <td><%= link_to 'Edit', edit_cruise_type_path(cruise_type) %></td>
	    <td><%= link_to 'Delete', cruise_type_path(cruise_type),
	                method: :delete,
	                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Cruise Type', new_cruise_type_path %> <br />
<%= link_to 'Back to Home', root_path %>
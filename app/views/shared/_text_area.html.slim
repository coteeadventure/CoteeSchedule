/= render 'shared/text_field', locals: { object: @reservation, property: :name, label: 'Your Name' }

- class_name = locals[:object].class.to_s.underscore
- html_id_name = "#{class_name}_#{locals[:property]}"
- label = locals[:label] || locals[:property].to_s.titlecase
- current_value = locals[:object].public_send locals[:property]
- rows = locals[:rows] || 2

div class="form-group"
  label class="col-sm-3 control-label" for="#{html_id_name}"
    = label
  div class="col-sm-9"
    textarea id="#{html_id_name}" class="form-control" name="#{class_name}[#{locals[:property]}]" rows="#{rows}" placeholder="#{locals[:placeholder]}"
      = current_value